&GLOBAL
	PROJECT_NAME H2_DELTA
	RUN_TYPE RT_PROPAGATION
&END GLOBAL

&MOTION
	&MD
		ENSEMBLE NVE
		STEPS 100
		TIMESTEP [fs] 0.002
		TEMPERATURE [K] 0.0
	&END MD
&END MOTION

&FORCE_EVAL
	METHOD QS
	&DFT
		BASIS_SET_FILE_NAME BASIS_MOLOPT
		BASIS_SET_FILE_NAME BASIS_RI_MOLOPT
		POTENTIAL_FILE_NAME GTH_POTENTIALS
		&MGRID
			CUTOFF 100
			NGRIDS 1
			REL_CUTOFF 10
		&END MGRID
		&QS
			METHOD GAPW
			EPS_DEFAULT 1.0E-7
		&END QS
		! Filter for density matrix
		&LS_SCF
			EPS_FILTER 1.0e-20
		&END LS_SCF
		&SCF
			SCF_GUESS ATOMIC
			ADDED_MOS -1
			EPS_SCF 1.0E-8
			&DIAGONALIZATION ON
				ALGORITHM STANDARD
			&END DIAGONALIZATION
			&MIXING
				METHOD BROYDEN_MIXING
				ALPHA 0.4
				NBROYDEN 4
			&END MIXING
		&END SCF
		&XC
			&XC_FUNCTIONAL PBE
			&END XC_FUNCTIONAL
		&END XC
		&POISSON
			PERIODIC NONE
			POISSON_SOLVER WAVELET
		&END POISSON
		&REAL_TIME_PROPAGATION
			ASPC_ORDER 1
			RTP_METHOD RTBSE
			DENSITY_PROPAGATION ON
			EPS_ITER 1.0E-8
			MAT_EXP BCH
			EXP_ACCURACY 1.0E-10
			INITIAL_WFN RT_RESTART
			APPLY_DELTA_PULSE
			DELTA_PULSE_SCALE 0.01
			DELTA_PULSE_DIRECTION 1 0 0
			PERIODIC .FALSE.
			&PRINT
				&MOMENTS
				&END MOMENTS
			&END PRINT
		&END REAL_TIME_PROPAGATION
	&END DFT
	! Include G0W0 bandstructure correction
	&PROPERTIES
		&BANDSTRUCTURE
			&GW
				! Simplest setting for quick checks
				NUM_TIME_FREQ_POINTS 20
			&END GW
		&END BANDSTRUCTURE
	&END PROPERTIES
	&SUBSYS
		&CELL
			PERIODIC NONE
			ABC 10.0 10.0 10.0
		&END CELL
		&TOPOLOGY
			&CENTER_COORDINATES
			&END CENTER_COORDINATES
		&END TOPOLOGY
		&COORD
			H 0.0 0.0 0.0
			H 0.74 0.0 0.0
		&END COORD
		&KIND H
			POTENTIAL GTH-PBE
			BASIS_SET ORB SZV-MOLOPT-GTH
			BASIS_SET RI_AUX RI_11_2_3_0_0_0_0_0_3.5e-03
		&END KIND
	&END SUBSYS
&END FORCE_EVAL
